<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txt_format">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/layout_height</item>>
        <item name="android:background">@drawable/edit_txt_background</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="style_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button_form_background</item>
    </style>

    <style name="style_social_botton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="horizontal_line_gray_24">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@color/smooth_gray</item>
    </style>

    <style name="vertical_line_yellow_40">
        <item name="android:layout_width">@dimen/dimen_8</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:background">@drawable/view_vertical_line_background</item>
        <item name="android:layout_marginStart">@dimen/dimen_24</item>
    </style>

    <style name="user_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">@dimen/dimenText_22</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_text_descriptions">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/dimenText_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_24</item>
    </style>

    <style name="detail_category_button">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bt_movie_category_background</item>
        <item name="android:textSize">@dimen/dimenText_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:strokeColor">@color/gris</item>
    </style>
</resources>